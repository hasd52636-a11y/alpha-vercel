{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/zhipu/(.*)",
      "dest": "/api/zhipu/[...endpoint].js"
    },
    {
      "src": "/api/ocr",
      "dest": "/api/ocr.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/zhipu/[...endpoint].js": {
      "maxDuration": 60
    },
    "api/ocr.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}